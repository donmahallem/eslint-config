{
    "name": "@donmahallem/eslint-config",
    "version": "2.3.17",
    "description": "My personal eslint. You better not use it!",
    "main": "src/index.js",
    "module": "src/index.js",
    "private": false,
    "scripts": {
        "build:readme": "npx @appnest/readme generate --input package_readme_blueprint.md --config readme_config.json",
        "test": "mocha --config ./.mocharc.yml",
        "test:coverage": "nyc --nycrc-path ./.nycrc.json npm run test",
        "lint": "eslint -c ./src/index.js ./src",
        "postlint": "prettier --config ./.prettierrc src/* --check",
        "lint:fix": "eslint -c ./src/index.js ./src --fix",
        "postlint:fix": "prettier --config ./.prettierrc src/**/*.ts --write",
        "docs": "typedoc --options  ./typedoc.json",
        "version": "npm run build:readme"
    },
    "files": [
        "dist/*",
        "src/*"
    ],
    "type": "module",
    "homepage": "https://github.com/donmahallem/eslint-config",
    "author": {
        "name": "donmahallem",
        "email": "donmahallem@users.noreply.github.com",
        "url": "https://github.com/donmahallem"
    },
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/donmahallem/eslint-config/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/donmahallem/eslint-config.git"
    },
    "engines": {
        "node": ">=20"
    },
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "@typescript-eslint/eslint-plugin": "~8.25.0",
        "@typescript-eslint/parser": "~8.25.0",
        "eslint-config-prettier": "~10.0.0",
        "eslint-plugin-chai-friendly": "~1.0.1",
        "eslint-plugin-headers": "~1.2.1",
        "eslint-plugin-import": "~2.31.0",
        "eslint-plugin-jsdoc": "~50.6.3",
        "eslint-plugin-mocha": "~10.5.0",
        "eslint-plugin-no-null": "~1.0.2",
        "eslint-plugin-prefer-arrow": "~1.2.3",
        "prettier": "~3.5.3",
        "typescript-eslint": "~8.25.0"
    },
    "peerDependencies": {
        "eslint": ">=9.21.0 <10"
    },
    "devDependencies": {
        "@appnest/readme": "1.2.7",
        "@semantic-release/changelog": "6.0.3",
        "@semantic-release/git": "10.0.1",
        "@types/chai": "5.0.1",
        "@types/mocha": "10.0.10",
        "@types/node": "22.13.8",
        "@types/sinon": "17.0.4",
        "chai": "5.2.0",
        "colors": "1.4.0",
        "eslint": "9.21.0",
        "mocha": "11.1.0",
        "nyc": "17.1.0",
        "sinon": "19.0.2",
        "ts-node": "10.9.2",
        "tslib": "2.8.1",
        "typedoc": "0.27.9",
        "typescript": "5.7.3"
    }
}
